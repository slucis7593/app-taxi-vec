<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/button_pressed_shape" />
            <item>
                <bitmap android:src="@drawable/ic_add_image_patch" android:gravity="center" />
            </item>
        </layer-list>
    </item>

    <item android:state_focused="true">
        <layer-list>
            <item android:drawable="@drawable/button_focus_shape" />
            <item>
                <bitmap android:src="@drawable/ic_add_image_patch" android:gravity="center" />
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:drawable="@drawable/button_normal_shape" />
            <item>
                <bitmap android:src="@drawable/ic_add_image_patch" android:gravity="center" />
            </item>
        </layer-list>
    </item>
</selector>